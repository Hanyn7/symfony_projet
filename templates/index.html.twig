{% block title%} Liste des Articles{% endblock %}
{% block body %}
{% if articles %}
 <table id="articles" class="table table-striped">
 <thead>
 <a href="/new" >Ajouter article</a>

 <tr>
 <th>titre</th>
 <th>contenu</th>
 <th>Actions</th>
 </tr>
 </thead>
 <tbody>
 {% for article in articles %}

 <tr>
 <td>{{ article.titre }}</td>
 <td>{{ article.contenu }}</td>
 <td><a href="/articel/{{ article.id }}" class="btn btn-dark">Détails</a></td>
<td> <a href="{{ path('delete_article', {'id': article.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de supprimer cet article?');" 
   data-method="DELETE" data-token="{{ csrf_token('delete' ~ article.id) }}">
   Supprimer
</a></td>
</tr>
 {% endfor %}
 </tbody>
 </table>
 {% else %}
 <p>Aucun articles</p>
 {% endif %}
{% endblock %}
